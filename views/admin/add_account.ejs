<%- include ('../_layouts/adminHeader.ejs'); -%>

<div class="mt-4">
    <h2 class="page-title">Add Accounts</h2>
    <a href="/admin/accounts" class="btn btn-primary">Back to all Accounts</a>
    <div class="mt4">
        <form action="/admin/accounts/add-account" method="post">

            <div class="form-group">
                <label for="">User</label>
                <input type="text" class="form-control" name="name"  type="text" placeholder="User">

            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="text" class="form-control" name="email"  type="text" placeholder="Email">

            </div>

            <div class="form-group">
                <label for="">Account</label>
                <input type="text" class="form-control" name="username"  type="text" placeholder="Username">

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Level</label>
                    <select class="form-control" name="admin">
                        <option>Admin</option>
                        <option>Customer</option>
                    </select>
              </div>
    
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" name="password"  placeholder="Password">

            </div>
    
            <div class="form-group">
                <label for="">Confirm Password</label>
                <input type="password" class="form-control" name="password2" placeholder="Confirm Password">
            </div>
            

            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<div class="mt4">
    <h3 class="text-center">@Add Accounts</h3>
</div>

<%- include ('../_layouts/adminFooter.ejs'); -%>